<?xml version="1.0"?>
<extension key="com.joineryhq.reasonable" type="module">
  <file>reasonable</file>
  <name>com.joineryhq.reasonable</name>
  <description>Be Reasonable</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Allen Shaw</author>
    <email>allen@JoineryHQ.com</email>
  </maintainer>
  <urls>
